{
  "name": "din24_todo_js_vanilla",
  "version": "1.0.0",
  "description": "Aplicaci√≥n ToDo List con Javascript vanilla y Electron",
  "main": "src/main/main.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "electron src/main/main.js",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "lint": "standard --fix",
    "doc": "jsdoc -c jsdoc.json"
  },
  "build": {
    "appId": "org.abastos.din24.todo-js-vanilla",
    "productName": "ToDo List",
    "icon": "src/assets/icon.png",
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "src/assets"
    },
    "win": {
      "target": [
        "portable",
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    },
    "publish": null
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3"
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "electron-reloader": "^1.2.3",
    "jsdoc": "^4.0.4",
    "standard": "^17.1.2"
  },
  "eslintConfig": {
    "extends": "standard"
  },
  "standard": {
    "ignore": [
      "dist/",
      "src/assets/"
    ]
  }
}
